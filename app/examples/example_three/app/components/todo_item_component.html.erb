<div class="TodoItem">
  <% if @editing %>
    <%= form_with(model: @todo_item) do |f| %>
      <%= f.text_field :text %>
      <%= f.submit %>
    <% end %>
  <% else %>
    <%= @todo_item.text %>
    <%= button_tag(
      "Edit",
      data: { action: "click->todoitemcomponent#edit" }
    ) %>
    <%= button_to(
      "Delete",
      todo_list_todo_item_path(
        @todo_item.todo_list_id,
        @todo_item
      ),
      rerender: :parent,
      method: :delete,
      form: {
        data: {
          turbo: true,
          turbo_stream: true
        }
      }
    ) %>
  <% end %>
</div>
